<Window x:Class="LibraryManager.Windows.AdminWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManager.Windows"
        mc:Ignorable="d"
        Title="Окно администратора" 
        Height="590" 
        Width="400"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF312C28"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <TextBlock 
                   Grid.ColumnSpan="3"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0 15 0 0"
                   Foreground="White"
                   Text="Меню администратора"
                   FontWeight="Bold"/>

        <TextBlock x:Name="txtWelcome"
                   Grid.ColumnSpan="3"
                   Grid.Row="1"
                   FontSize="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0 15 0 0"
                   Foreground="White"
                   Text="Меню администратора"
                   />

        <StackPanel Grid.Row="2"
                    Grid.RowSpan="2"
                    Grid.Column="1">
            
            <Button x:Name="btnBooks"
                    Width="250"
                    Height="70"
                    Margin="0 40 0 0"
                    Content="Редактирование книг" 
                    Click="btnBooks_Click"
                    Style="{DynamicResource RoundedButtonStyle}"
                    />
            
            <Button x:Name="btnLibrarian"
                    Width="250"
                    Height="70"
                    Margin="0 10 0 0"
                    Content="Редактирование сотрудников" 
                    Click="btnLibrarian_Click"
                    Style="{DynamicResource RoundedButtonStyle}"
                    />
            
            <Button x:Name="btnClient"
                    Width="250"
                    Height="70"
                    Margin="0 10 0 0"
                    Content="Редактирование читательских билетов" 
                    Click="btnClient_Click"
                    Style="{DynamicResource RoundedButtonStyle}"
                    />

            <Button x:Name="btnClose"
                    Width="200"
                    Height="70"
                    Margin="0 40 0 0"
                    Content="Выход" 
                    Click="btnClose_Click" 
                    Style="{DynamicResource RoundedButtonStyle}"
                    />

        </StackPanel>

    </Grid>
</Window>
